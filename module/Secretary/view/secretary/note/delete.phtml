<div class="row notes">
    <div class="span12">
        <h1><?php echo $this->translate('Delete Note') ?></h1>
        <?php if (!empty($this->msg) && $this->msg[0] == 'error') {
            echo $this->ztbAlert($this->translate($this->msg[1]), false, 'alert-error');
        } ?>
        <?php if (true === $this->showKeyRequestForm): ?>
            <?php echo $this->render('secretary/note/_decryptForm.phtml') ?>
        <?php else: ?>
