            <div class="well well-small"><fieldset>
               <legend><?php echo $this->translate('Please confirm with key to delete note') ?></legend>
                <?php echo $this->ztbForm($keyRequestForm) ?>
           </fieldset></div>
            <p>
                <a class="btn btn-small" href="<?php echo $this->url('secretary/note'); ?>">
